# please upstream changes!
# https://gitlab.servalldatasystems.com/meat-n-potatoes/dotfiles

root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = null

[*.md]
trim_trailing_whitespace = false

[*.rs]
indent_size = 4

[Makefile]
indent_style = tab
trim_trailing_whitespace = false
